<h1><%= title %></h1>

<%- messages() %>

<section class="account-register">
  <div class="form-card">
    <form class="register-form" method="post" action="/account/register">
      <div class="form-group">
        <label for="account_firstname">First Name</label>
        <input type="text" id="account_firstname" name="account_firstname" required>
      </div>
      <div class="form-group">
        <label for="account_lastname">Last Name</label>
        <input type="text" id="account_lastname" name="account_lastname" required>
      </div>
      <div class="form-group">
        <label for="account_email">Email</label>
        <input type="email" id="account_email" name="account_email" required>
      </div>
      <div class="form-group">
        <label for="account_password">Password</label>
        <input type="password" id="account_password" name="account_password" required
          minlength="12"
          pattern="(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}"
          aria-describedby="password-help">
        <button class="toggle-password" type="button" data-toggle="password" data-target="account_password">
          Show password
        </button>
        <p id="password-help" class="form-help">
          Must be at least 12 characters and include 1 uppercase letter, 1 number, and 1 special character.
        </p>
      </div>
      <button class="btn-primary" type="submit">Create Account</button>
    </form>
  </div>
</section>
