<h1><%- title %></h1>

<%- messages() %>

<% if (locals.errors) { %>
<ul class="errors">
  <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<section class="add-inventory">
  <div class="form-card wide">
    <form class="inventory-form" method="post" action="/inv/add-inventory">
      
      <div class="form-group">
        <label for="classification_id">Classification <span class="required">*</span></label>
        <%- classificationList %>
      </div>

      <div class="form-group">
        <label for="inv_make">Make <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_make" 
          name="inv_make" 
          required
          minlength="3"
          value="<%= locals.inv_make || '' %>"
        >
      </div>

      <div class="form-group">
        <label for="inv_model">Model <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_model" 
          name="inv_model" 
          required
          minlength="3"
          value="<%= locals.inv_model || '' %>"
        >
      </div>

      <div class="form-group">
        <label for="inv_year">Year <span class="required">*</span></label>
        <input 
          type="number" 
          id="inv_year" 
          name="inv_year" 
          required
          min="1900"
          max="2099"
          value="<%= locals.inv_year || '' %>"
        >
      </div>

      <div class="form-group">
        <label for="inv_description">Description <span class="required">*</span></label>
        <textarea 
          id="inv_description" 
          name="inv_description" 
          required
          rows="4"
        ><%= locals.inv_description || '' %></textarea>
      </div>

      <div class="form-group">
        <label for="inv_image">Image Path <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_image" 
          name="inv_image" 
          required
          value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>"
        >
      </div>

      <div class="form-group">
        <label for="inv_thumbnail">Thumbnail Path <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_thumbnail" 
          name="inv_thumbnail" 
          required
          value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
        >
      </div>

      <div class="form-group">
        <label for="inv_price">Price <span class="required">*</span></label>
        <input 
          type="number" 
          id="inv_price" 
          name="inv_price" 
          required
          min="0"
          step="0.01"
          value="<%= locals.inv_price || '' %>"
        >
      </div>

      <div class="form-group">
        <label for="inv_miles">Miles <span class="required">*</span></label>
        <input 
          type="number" 
          id="inv_miles" 
          name="inv_miles" 
          required
          min="0"
          value="<%= locals.inv_miles || '' %>"
        >
      </div>

      <div class="form-group">
        <label for="inv_color">Color <span class="required">*</span></label>
        <input 
          type="text" 
          id="inv_color" 
          name="inv_color" 
          required
          value="<%= locals.inv_color || '' %>"
        >
      </div>

      <button class="btn-primary" type="submit">Add Vehicle</button>
    </form>
    <p class="form-footnote"><a href="/inv/">Back to Management</a></p>
  </div>
</section>
